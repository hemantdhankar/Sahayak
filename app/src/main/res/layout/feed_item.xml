<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feed_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/leaderboard_linear_layout_bg">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"

            android:layout_height="200dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:outlineSpotShadowColor="@color/design_default_color_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_person_24"
                    android:layout_marginLeft="15dp">

                </ImageView>
                <TextView
                    android:id="@+id/post_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post Writer"
                    android:textSize="20dp">
                </TextView>
                <TextView
                    android:id="@+id/pincode"
                    android:gravity="right"
                    android:text="Loading..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/feed_desc"
                android:textSize="20dp"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_borders_transparent"
                >
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_thumb_up_24">

            </ImageView>
            <TextView
                android:textSize="20dp"
                android:id="@+id/numberoflikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:layout_marginRight="20dp">
            </TextView>
            <TextView
                android:textSize="20dp"
                android:text="Loading..."
                android:id="@+id/currentstatustxtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>





</LinearLayout>