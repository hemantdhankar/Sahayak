<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leaderboard_linear_layout_bg"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textAlignment="center"
                android:id="@+id/post_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/post_pin"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/like_button"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_baseline_thumb_up_24"
                        />
                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/numberoflikesmainpost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
                <Button
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="@drawable/ic_baseline_share_24"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/claimissuebtn"
                    android:text="Clain issue"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:id="@+id/issueresolvedbtn"
                    android:text="Issue Resolved"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"></Button>
                <Button
                    android:id="@+id/abortissuebtn"
                    android:text="Abort Issue"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"></Button>
            </LinearLayout>
            <TextView
                android:id="@+id/loadingtxt"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:text="Loading...."
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:id="@+id/issue_image"
                android:layout_width="300dp"
                android:layout_height="200sp">
            </ImageView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
