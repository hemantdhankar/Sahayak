<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.sahayak">
    <uses-permission android:name="android.permission.CAMERA"
        tools:ignore="CoarseFineLocation"> </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-feature android:name="android.hardware.location.gps" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/sahayak_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sahayak_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sahayak">
        <activity
            android:name=".RaiseFeature"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity
            android:name=".Feed"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"/>
        <activity
            android:name=".AfterLoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeaderBoard"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize"
            />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>